      "No button is useless now ğŸ˜¤",
      "Please please please ğŸ˜­â¤ï¸",
      "Now only YES is left ğŸ˜"
    ];

    function noClick() {
      const msg = document.getElementById("msg");
      const yesBtn = document.getElementById("yesBtn");

      msg.innerText = excuses[noCount % excuses.length];

      noCount++;

      // YES button grows bigger every time
      yesSize += 6;
      yesBtn.style.fontSize = yesSize + "px";
      yesBtn.style.padding = (12 + noCount * 2) + "px " + (20 + noCount * 3) + "px";

      // Heart animation
