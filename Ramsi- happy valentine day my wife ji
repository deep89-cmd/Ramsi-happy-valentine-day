  <script>
    let noCount = 0;
    let yesSize = 18;

    const excuses = [
      "Come on Ramsii please ğŸ¥º",
      "Just say YES once ğŸ˜­",
      "Baby don't do this to me ğŸ˜©",
      "Ramsii you are my life â¤ï¸",
